# newsboat configuration
browser "/usr/local/bin/firefox --private-window %u"
prepopulate-query-feeds yes
auto-reload yes
reload-time 15
notify-always no
notify-format "newsboat: %n articles"
notify-program "/usr/bin/notify-send"
bind-key SPACE open
bind-key s up
bind-key d down
bind-key e open
unbind-key f
bind-key f open-in-browser
show-read-feeds no
show-read-articles no
articlelist-format "%4i %f %D  %?T?|%-17T| ?%t"
feedlist-format     "%n %11u %T"
feed-sort-order firsttag
# colors
color info                   color255     default
color listnormal             color12     default
color listfocus              color159    default  bold
color listnormal_unread      color12     default
color listfocus_unread       color159    default  bold
color article                color255    default

cleanup-on-quit yes
keep-articles-days 30
cookie-cache "~/.config/newsboat/cookies.txt"
